<div class="container" style="margin-top: 100px;">
    {{!-- fila 1--}}
    <div class="row">
        <div class="col">
            <p class="text-left">
                <span>Hola {{ usuario }} ! </span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a>
                </p>
        </div>
    </div>
    {{!-- FIN fila 1--}}

    {{!-- fila 2--}}
<div class=" row">
                        <div class="col-7" style="margin-top: -9px ;">
                            <h2>Listado de Novedades</h2>
                        </div>
                        <div class="col-5 text-right">
                            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i>
                                Nuevo</a>
                        </div>
        </div>
        {{!-- fin fila 2--}}

        {{!-- fila 3--}}
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Título</th>.
                    <th scope="col">Imagen</th>
                    <th scope="col" class= " text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td>{{{imagen}}}</td>
                    <td class="text-right">
                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                            <i class="fa fa-pencil"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary">
                            <i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- fin fila 3--}}


</div>